{
	"parserOptions": {
		"ecmaVersion": 5
	},
	"rules": {
		"brace-style": [2, "1tbs", { "allowSingleLine": true } ],
		"curly": 2,
		"quotes":[2, "single"],
		"no-trailing-spaces": 2,
		"indent":[2, "tab"],
		"no-console": 0,
		"prefer-template": 0,
		"no-ternary": 0,
		"prefer-arrow-callback": 0,
		"complexity": 0,
		"max-depth": 0,
		"prefer-reflect": 0
	},
	"env": {
		"browser": true
	}
}
